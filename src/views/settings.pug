extends base

block content
    body
        div(class="pageWrapper")
            include _header
            div(class="pageContent")
                include _sidebar
                div(class="content content--active" id="settings")
                    div(class="contentHeader")
                        div(class="contentHeader__title")
                            span Settings
                            div(class="contentHeader__breadcrumb")
                                ul(class="breadcrumb")
                                    li(class="breadcrumb__item")
                                        a(href="/dashboard") Dashboard
                                    li(class="breadcrumb__item breadcrumb__item--active")
                                        p Profile Settings
                    div(class="accountSettings")
                        div(class="accountSettings__menu")
                            ul
                                li(class="accountSettings__menuItem accountSettings__menuItem--active ")
                                    a(href="/user/settings")  Profile Information
                                        i(class="fas fa-user-cog")
                                li(class="accountSettings__menuItem")
                                    a(href="/user/change_password") Change Password
                                        i(class="fas fa-unlock-alt") 
                                li(class="accountSettings__menuItem")
                                    a(href="/user/delete_account") Delete Account
                                        i(class="fas fa-ban") 
                        div(class="accountSettings__component")
                            div(class="accountSettings__componentHeader")
                                span Basic Information
                            form(action=`/user/settings/${user.ID}` class="accountSettings__Form" id="accountSettings__Form")
                                div(class="accountSettings__FormGroup")
                                    label(for="settingInfo_image") Photo
                                    div(class="accountSettings__FormGroupUserPhoto")
                                        label(for="settingInfo_image")
                                            img(src=`${user.photo_url}` alt="user_photo" class="settingInfo__userphoto")
                                            input(type="file" id="settingInfo_image" value=`${user.photo_url}`)
                                            span
                                                i(class="fas fa-pencil-alt")
                                div(class="accountSettings__FormGroup")
                                    label(for="settingInfo_firstName") First Name
                                    div
                                        input(type="text" name="first_name" id="settingInfo_firstName" value=(user===undefined ? '' : user.first_name))
                                div(class="accountSettings__FormGroup")
                                    label(for="settingInfo_lastName") Last Name
                                    div
                                        input(type="text" name="last_name" id="settingInfo_lastName" value=(user===undefined ? '' : user.last_name))
                                div(class="accountSettings__FormGroup")
                                    label(for="settingInfo_companyName") Company Name
                                    div
                                        input(type="text" id="settingInfo_companyName" value=(user===undefined ? '' : user.company))
                                div(class="accountSettings__FormGroup")
                                    label(for="settingInfo_email" value=(user===undefined? '': user.email)) Email
                                    div
                                        input(type="email" id="settingInfo_email" value=(user===undefined ? '' : user.email))
                                div(class="accountSettings__FormGroup")
                                    label(for="settingInfo_phoneNumber") Phone Number
                                    div
                                        input(type="text" id="settingInfo_phoneNumber" value=(user===undefined ? '' : user.phone_number))
                                div(class="accountSettings__FormGroup")
                                    label(for="settingInfo_streetNumber") Street Number
                                    div
                                        input(type="text" name="streetNumber" id="settingInfo_streetNumber" value=(user===undefined ? '' : user.street_number))
                                div(class="accountSettings__FormGroup")
                                    label(for="settingInfo_streetName") Street Name
                                    div
                                        input(type="text" name="streetName" id="settingInfo_streetName" value=(user===undefined ? '' : user.street_name))
                                div(class="accountSettings__FormGroup")
                                    label(for="settingInfo_city") City
                                    div
                                        input(type="text" name="city" id="settingInfo_city" value=(user===undefined ? '' : user.city))
                                div(class="accountSettings__FormGroup" id="accountSettings__FormGroupStates")
                                    label(for="state") State
                                    div
                                        select(name="state" id="settingInfo_state")
                                            option(value="" selected=(user===undefined ? 'selected' : false) disable) Select a State
                                            option(value="AL" selected=(user && user.state === 'AL' ? 'selected' : false)) Alabama
                                            option(value="AK" selected=(user && user.state === 'AK' ? 'selected' : false)) Alaska
                                            option(value="AZ" selected=(user && user.state === 'AZ' ? 'selected' : false)) Arizona
                                            option(value="AR" selected=(user && user.state === 'AR' ? 'selected' : false)) Arkansas
                                            option(value="CA" selected=(user && user.state === 'CA' ? 'selected' : false)) California
                                            option(value="CO" selected=(user && user.state === 'CO' ? 'selected' : false)) Colorado
                                            option(value="CT" selected=(user && user.state === 'CT' ? 'selected' : false)) Connecticut
                                            option(value="DE" selected=(user && user.state === 'DE' ? 'selected' : false)) Delaware
                                            option(value="DC" selected=(user && user.state === 'DC' ? 'selected' : false)) District Of Columbia
                                            option(value="FL" selected=(user && user.state === 'FL' ? 'selected' : false)) Florida
                                            option(value="GA" selected=(user && user.state === 'GA' ? 'selected' : false)) Georgia
                                            option(value="HI" selected=(user && user.state === 'HI' ? 'selected' : false)) Hawaii
                                            option(value="ID" selected=(user && user.state === 'ID' ? 'selected' : false)) Idaho
                                            option(value="IL" selected=(user && user.state === 'IL' ? 'selected' : false)) Illinois
                                            option(value="IN" selected=(user && user.state === 'IN' ? 'selected' : false)) Indiana
                                            option(value="IA" selected=(user && user.state === 'IA' ? 'selected' : false)) Iowa
                                            option(value="KS" selected=(user && user.state === 'KS' ? 'selected' : false)) Kansas
                                            option(value="KY" selected=(user && user.state === 'KY' ? 'selected' : false)) Kentucky
                                            option(value="LA" selected=(user && user.state === 'LA' ? 'selected' : false)) Louisiana
                                            option(value="ME" selected=(user && user.state === 'ME' ? 'selected' : false)) Maine
                                            option(value="MD" selected=(user && user.state === 'MD' ? 'selected' : false)) Maryland
                                            option(value="MA" selected=(user && user.state === 'MA' ? 'selected' : false)) Massachusetts
                                            option(value="MI" selected=(user && user.state === 'MI' ? 'selected' : false)) Michigan
                                            option(value="MN" selected=(user && user.state === 'MN' ? 'selected' : false)) Minnesota
                                            option(value="MS" selected=(user && user.state === 'MS' ? 'selected' : false)) Mississippi
                                            option(value="MO" selected=(user && user.state === 'MO' ? 'selected' : false)) Missouri
