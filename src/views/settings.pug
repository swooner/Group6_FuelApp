                                            option(value="NH" selected=(user && user.state === 'NH' ? 'selected' : false)) New Hampshire
                                            option(value="NJ" selected=(user && user.state === 'NJ' ? 'selected' : false)) New Jersey
                                            option(value="NM" selected=(user && user.state === 'NM' ? 'selected' : false)) New Mexico
                                            option(value="NY" selected=(user && user.state === 'NY' ? 'selected' : false)) New York
                                            option(value="NC" selected=(user && user.state === 'NC' ? 'selected' : false)) North Carolina
                                            option(value="ND" selected=(user && user.state === 'ND' ? 'selected' : false)) North Dakota
                                            option(value="OH" selected=(user && user.state === 'OH' ? 'selected' : false)) Ohio
                                            option(value="OK" selected=(user && user.state === 'OK' ? 'selected' : false)) Oklahoma
                                            option(value="OR" selected=(user && user.state === 'OR' ? 'selected' : false)) Oregon
                                            option(value="PA" selected=(user && user.state === 'PA' ? 'selected' : false)) Pennsylvania
                                            option(value="RI" selected=(user && user.state === 'RI' ? 'selected' : false)) Rhode Island
                                            option(value="SC" selected=(user && user.state === 'SC' ? 'selected' : false)) South Carolina
                                            option(value="SD" selected=(user && user.state === 'SD' ? 'selected' : false)) South Dakota
                                            option(value="TN" selected=(user && user.state === 'TN' ? 'selected' : false)) Tennessee
                                            option(value="TX" selected=(user && user.state === 'TX' ? 'selected' : false)) Texas
                                            option(value="UT" selected=(user && user.state === 'UT' ? 'selected' : false)) Utah
                                            option(value="VT" selected=(user && user.state === 'VT' ? 'selected' : false)) Vermont
                                            option(value="VA" selected=(user && user.state === 'VA' ? 'selected' : false)) Virginia
                                            option(value="WA" selected=(user && user.state === 'WA' ? 'selected' : false)) Washington
                                            option(value="WV" selected=(user && user.state === 'WV' ? 'selected' : false)) West Virginia
                                            option(value="WI" selected=(user && user.state === 'WI' ? 'selected' : false)) Wisconsin
                                            option(value="WY" selected=(user && user.state === 'WY' ? 'selected' : false)) Wyoming
                                div(class="accountSettings__FormGroup")
                                    label(for="settingInfo_zipcode") Zipcode
                                    div
                                        input(id="settingInfo_zipcode" name="zip_code" type="number" maxlength="5"  value=(user===undefined ? '' : user.zip_code) required)
                                div(class="accountSettings__FormGroup")
                                    label(for="settingInfo_country") Country
                                    div
                                        input(type="text" id="settingInfo_country" value="United States")
                                if errors
                                    ul
                                    for error in errors
                                        li!= error.msg
                                div(class="accountSettings__FormGroup")
                                    button(class="accountSettings__FormGroupSubmitButton" type="submit" id="updateNewInformation") Save Changes